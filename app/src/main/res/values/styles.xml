<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PortraitDisplayStyle">
        <item name="android:layout_height">@dimen/displayHeight</item>
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:shadowRadius">@dimen/displayTextShadowRadius</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="LandscapeDisplayStyle">
        <item name="android:layout_height">@dimen/displayLandscapeHeight</item>
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:shadowRadius">@dimen/displayTextShadowRadius</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/textLandscapeSize</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/lineHeight</item>
        <item name="android:background">#696969</item>
    </style>

    <style name="TopLineStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/lineHeight</item>
        <item name="android:background">#696969</item>
        <item name="android:layout_marginTop">@dimen/lineMarginTop</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="strokeColor">#6A6A6A</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
    </style>

    <style name="LandscapeButtonStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/marginLandscape</item>
        <item name="strokeColor">#6A6A6A</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
    </style>

    <style name="PortraitLowButtonStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="strokeColor">#6A6A6A</item>
        <item name="strokeWidth">@dimen/strokeWidth</item>
    </style>

    <style name="ImageViewThemeSelection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearOuterThemeSelectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lightSteel</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearInnerThemeSelectionPortraitStyle">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">260dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="LinearInnerThemeSelectionLandscapeStyle">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>