<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyBlackTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ThemeSelectionActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/pack_1"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:paddingHorizontal="20dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/pack_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_dark_light_theme"
            style="@style/ImageViewThemeSelection"
            android:src="@drawable/theme1"
            app:layout_constraintEnd_toEndOf="@id/pack_1"
            app:layout_constraintStart_toStartOf="@id/pack_1"
            app:layout_constraintTop_toTopOf="@id/pack_1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/pack_2"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:paddingHorizontal="20dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pack_1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_black_theme"
            style="@style/ImageViewThemeSelection"
            android:src="@drawable/theme2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_dark_light_theme"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
