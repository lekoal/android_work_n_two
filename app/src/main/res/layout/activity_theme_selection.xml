<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyBlackTheme"
    tools:context=".ui.ThemeSelectionActivity">

    <ImageView
        android:id="@+id/image_dark_light_theme"
        style="@style/ImageViewThemeSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_black_theme"
        android:src="@drawable/theme1" />

    <ImageView
        android:id="@+id/image_black_theme"
        style="@style/ImageViewThemeSelection"
        app:layout_constraintStart_toEndOf="@id/image_dark_light_theme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/theme2" />

</androidx.constraintlayout.widget.ConstraintLayout>